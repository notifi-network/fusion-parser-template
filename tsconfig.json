{
    "compilerOptions": {
      "target": "ES2022",
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "allowJs": true,
      "resolveJsonModule": true,
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noEmit": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "./tests/**/*", "dist"]
  }